{
  "name": "mmsg_backend",
  "version": "0.1.0",
  "bin": {
    "msg_backend": "bin/msg_backend.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "hotswap": "npx ts-node helperScripts/getConfirmation.ts && cdk deploy --hotswap",
    "deploy": "npx ts-node helperScripts/getConfirmation.ts && cdk deploy --outputs-file ./cdk-outputs.json",
    "diff": "npx ts-node helperScripts/getConfirmation.ts && cdk diff",
    "bootstrap": "npx ts-node helperScripts/getConfirmation.ts && cdk bootstrap",
    "destroy": "echo destroy_blocked",
    "synth-template": "cdk synth --no-staging > template.yaml",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "upload-templates": "npx ts-node helperScripts/uploadTemplates.ts"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.129",
    "@types/jest": "^29.5.5",
    "@types/node": "20.7.1",
    "aws-cdk": "2.100.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.481.0",
    "@inquirer/prompts": "^3.3.0",
    "aws-cdk-lib": "2.100.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1502.0",
    "axios": "^1.6.2",
    "constructs": "^10.0.0",
    "dotenv": "^16.3.1",
    "source-map-support": "^0.5.21"
  }
}
